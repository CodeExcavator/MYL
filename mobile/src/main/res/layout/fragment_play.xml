<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="playVM"
            type="com.productiveengine.myl.ViewModels.PlayVM"/>
    </data>
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.productiveengine.myl.UIL.Play">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <SeekBar
                android:id="@+id/musicSeekBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:background="@color/lightGrey">
            </SeekBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtCurrentSong"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtSongState"
                android:gravity="center"
                />

            <View android:id="@+id/hateDivisor"
                android:layout_height="2dp"
                android:layout_width="fill_parent"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="Pause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPause"
                    android:background="@drawable/yellow_button"
                    android:layout_weight="0.5"
                    android:layout_margin="1dp" />

                <Button
                    android:text="Play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPlay"
                    android:background="@drawable/green_button"
                    android:layout_weight="0.5"
                    android:layout_margin="1dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="Replay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnReplay"
                    android:background="@drawable/yellow_button"
                    android:layout_weight="0.5"
                    android:layout_margin="1dp" />

                <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnNext"
                    android:background="@drawable/green_button"
                    android:layout_weight="0.5"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <Button
                android:text="Refresh song list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnRefreshSongList"
                android:background="@drawable/black_button"
                style="@style/ButtonTextWhite"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </FrameLayout>
</layout>